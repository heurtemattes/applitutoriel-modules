{
  "contextPath": "applitutoriel-spa",
  "fullSpa": {
    "enabled": true,
    "host": "http://localhost/",
    "name": "applitutoriel-service"
  },
  "services": {
    "host": "http://localhost/",
    "name": "applitutoriel-service"
  },
  "localeI18n": {
    "locale": "fr-FR",
    "lang": "fr"
  },
  "mock": {
    "enabled": true,
    "servicePage" : {
      "enabled": true
    },
    "serviceData" : {
      "enabled": true
    }
  },
  "logClient": {
    "remote": false,
    "level": "DEBUG",
    "appenders": {
      "BrowserConsole": {
        "type": "BrowserConsole",
        "layout": {
          "type": "THIN"
        }
      },
      "Ajax": {
        "type": "Ajax",
        "layout": {
          "type": "BASIC"
        },
        "threshold": 100,
        "timeout": 3000,
        "url": "/log"
      }
    }
  }
}
